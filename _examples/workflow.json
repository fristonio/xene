{
    "kind": "Workflow",
    "apiVersion": "v1alpha1",
    "metadata": {
      "name": "temp-workflow",
      "description": "A test temporary workflow"
    },
    "spec": {
      "triggers": {
        "temp-trigger": {
          "type": "cron",
          "cronConfig": "* * * * *"
        }
      },
      "pipelines": {
        "temp-pipeline": {
          "trigger": "temp-trigger",
          "description": "temporary pipeline",
          "executor": "docker",
          "tasks": {
              "build-task": {
                "description": "Build xene",
                "workingDir": "/go/src/github.com/fristonio/xene/",
                "steps": [
                  {
                    "name": "format",
                    "type": "shell",
                    "cmd": "make format"
                  },
                  {
                    "name": "build",
                    "type": "shell",
                    "cmd": "make build"
                  }
                ]
              },
              "test-task": {
                "description": "Test xene",
                "workingDir": "/go/src/github.com/fristonio/xene/",
                "dependencies": ["build-task"],
                "steps": [
                  {
                    "name": "test",
                    "type": "shell",
                    "cmd": "make test"
                  }
                ]
              }
          }
        }
      }
    }
  }
